            </ui:Table>
            <!-- ===== END: Top Trade Details Table ===== -->

            <!-- ===== START: Top Trade Details Table (bound to appModel TradeDetails as object property binding) ===== -->
            
            <Panel
                headerText="Operations Input"
                expandable="true"
                expanded="true"
                width="auto"
                class="sapUiMediumMarginTop"
            >
                <HBox width="100%" class="sapUiSmallMargin" style="gap: 2rem;">
                    <!-- Left Column -->
                    <VBox width="48%" class="sapUiSmallMarginEnd">
                    <Label text="Demurrage Nos of Days" />
                 <Input
                  value="{appModel>/TradeDetails/0/TrdDemday}"
                   enabled="{appModel>/IsEditable}" />


                        <Label text="BL Quantity in BBL" />
                        <Input value="{path:'appModel>/TradeDetails/0/Lp1Qtybbl',
                            type: 'sap.ui.model.type.Float',
                            formatOptions: {groupingEnabled: true, minFractionDigits: 3, maxFractionDigits: 3}}"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="BL Quantity in MT" />
                        <Input value="{path:'appModel>/TradeDetails/0/Lp1Qtymt',
                            type: 'sap.ui.model.type.Float',
                            formatOptions: {groupingEnabled: true, minFractionDigits: 3, maxFractionDigits: 3}}"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="BL Date" />
                        <DatePicker
                            value="{appModel>/TradeDetails/0/BlDate}"
                            displayFormat="dd-MM-yyyy"
                            valueFormat="yyyy-MM-dd"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="NOR Date" />
                        <DatePicker
                            value="{appModel>/TradeDetails/0/NorDate}"
                            displayFormat="dd-MM-yyyy"
                            valueFormat="yyyy-MM-dd"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="Final Laycan Start Date" />
                        <DatePicker
                            value="{appModel>/TradeDetails/0/TrdWsdt}"
                            displayFormat="dd-MM-yyyy"
                            valueFormat="yyyy-MM-dd"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="Final Laycan End Date" />
                        <DatePicker
                            value="{appModel>/TradeDetails/0/TrdWedt}"
                            displayFormat="dd-MM-yyyy"
                            valueFormat="yyyy-MM-dd"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="Load Port API For Crude" />
                        <Input value="{path:'appModel>/TradeDetails/0/Lp1Api',
                            type: 'sap.ui.model.type.Float',
                            formatOptions: {groupingEnabled: true, minFractionDigits: 3, maxFractionDigits: 3}}"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />
                    </VBox>

                    <!-- Right Column -->
                    <VBox width="48%" class="sapUiSmallMarginBegin">
                        <Label text="Discharge Completion Date" />
                        <DatePicker id="dschDate"
                            value="{appModel>/TradeDetails/0/DschDate}"
                            displayFormat="dd-MM-yyyy"
                            valueFormat="yyyy-MM-dd"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                             <Label text="Title Transfer Event" />
                             <Input 
                                value="{appModel>/TradeDetails/0/TrdOptdsel}"  enabled="false"
                            />

                        <Label text="Title Transfer Date" />
                        <DatePicker id="TtlDate"
                            value="{appModel>/TradeDetails/0/TrdTtldat}"
                            displayFormat="dd-MM-yyyy"
                            valueFormat="yyyy-MM-dd"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="Discharge Port API For Crude" />
                        <Input value="{path:'appModel>/TradeDetails/0/Dp1Api',
                            type: 'sap.ui.model.type.Float',
                            formatOptions: {groupingEnabled: true, minFractionDigits: 3, maxFractionDigits: 3}}"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="Load Port Density For Naptha" />
                        <Input id="loadPortDensityNaptha"
    value="{path:'appModel>/TradeDetails/0/TrdLpdenst',
    formatter: '.formatter.formatNumberWithComma'}"
    liveChange=".onNumberLiveChange"
    enabled="{appModel>/IsEditable}"
    class="sapUiTinyMarginBottom" />


                        <Label text="Material Temperature" />
                        <Input
                            value="{appModel>/TradeDetails/0/TrdMattemp}"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />

                        <Label text="Test Temperature" />
                        <Input
                            value="{appModel>/TradeDetails/0/TrdTsttemp}"
                            enabled="{appModel>/IsEditable}"
                            class="sapUiTinyMarginBottom" />
                    </VBox>
                </HBox>
            </Panel>

               <Panel
                    expandable="true"
                    expanded="true"
                    headerText="Cost"
                    width="auto"
                    class="sapUiMediumMarginTop"
                >
                    <ui:Table
                                id="costTableId"
                                rows="{
                                    path: 'costModel>/'
                                }"
                                selectionMode="Multi"
                                selectionBehavior="Row"
                                rowSelectionChange=".onRowSelectionChange"
                                enableColumnReordering="false"
                            >
                                <!-- Header Toolbar -->
                                <ui:extension>
                                    <OverflowToolbar>
                                        <content>
                                            <ToolbarSpacer />
                                            <Button
                                                id="toggleAddBtn"
                                                text="Add"
                                                icon="sap-icon://add"
                                                press=".onToggleAdd"
                                            />

                                            <Button
                                                id="toggleSaveBtn"
                                                text="Save"
                                                icon="sap-icon://save"
                                                press=".onToggleSave"
                                                enabled="false"
                                                visible="{appModel>/IsCOSTSaveActive}"
                                            />

                                            <Button
                                                id="toggleEditBtn"
                                                text="Edit"
                                                icon="sap-icon://edit"
                                                press=".onToggleEdit"
                                                enabled="{appModel>/IsCOSTSelectionActive}"
                                            />
                                            <Button
                                                id="toggleDeleteBtn"
                                                text="Delete"
                                                enabled="{appModel>/IsCOSTSelectionActive}"
                                                icon="sap-icon://delete"
                                                press=".onToggleDel"
                                            />
                                        </content>
                                    </OverflowToolbar>
                                </ui:extension>

                                <!-- Columns -->
                                <ui:columns>
                                    <!-- Cost Type (editable ComboBox) -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>COST_TYPE}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey="{costModel>CstType}"
                                                enabled="{costModel>isRowEditable}"
                                                items="{ path: 's4HanaModel>/ZTA_CST_TYPESet' }"
                                            >
                                                <core:Item
                                                    key="{s4HanaModel>CstType}"
                                                    text="{s4HanaModel>CstTypeD}"
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>
                                    
                                    <!-- Cost Status -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>COST_STATUS}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey="{costModel>CstEstfn}"
                                                enabled="{costModel>isRowEditable}"
                                                items="{ path: 's4HanaModel>/ZTA_CST_ESTFINSet' }"
                                            >
                                                <core:Item
                                                    key="{s4HanaModel>CstEstfn}"
                                                    text="{s4HanaModel>CstEstfnD}"
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>

                                    <!-- Price Type (editable ComboBox) -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>PRICE_TYPE}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey="{costModel>CstPrctyp}"
                                                enabled="{costModel>isRowEditable}"
                                                items="{ path: 's4HanaModel>/ZTA_PRC_TYPESet' }"
                                            >
                                                <core:Item
                                                    key="{s4HanaModel>CstPrctyp}"
                                                    text="{s4HanaModel>CstPrctypD}"
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>
                                    <!-- Total Value (editable ComboBox) -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>TOT_VALUE}" />
                                        <ui:template>
                                            <Input 
                                                value="{path:'costModel>CstTotval',  formatter: '.formatter.formatNumberWithComma'}"
                                                liveChange=".onCostNumberLiveChange"
                                                enabled="{costModel>isRowEditable}" />
                                        </ui:template>
                                      
                                    </ui:Column>

                                    

                                    <!-- Expense Currency -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>EXPENSE_CURR}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey="{costModel>CstExpcur}"
                                                enabled="{costModel>isRowEditable}"
                                                items="{ path : 's4HanaModel>/ZTA_CURRENCYSet' }"
                                            >
                                                <core:Item
                                                    key="{s4HanaModel>CurrencyId}"
                                                    text="{s4HanaModel>CurrencyD}"
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>

                                    <!-- Settlement Currency -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>SETTLEMENT_CURR}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey="{costModel>CstStcur}"
                                                enabled="{costModel>isRowEditable}"
                                                items="{ path : 's4HanaModel>/ZTA_CURRENCYSet' }"
                                            >
                                                <core:Item
                                                    key="{s4HanaModel>CurrencyId}"
                                                    text="{s4HanaModel>CurrencyD}"
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>

                                    <!-- Exchange Rate -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>EXCHNG_RATE}" />
                                        <ui:template>
                                            <Input 
                                                value="{path:'costModel>CstExrt' ,formatter:'.formatter.formatNumberWithComma'}"
                                                liveChange=".onCostNumberLiveChange"
                                                enabled="{costModel>isRowEditable}" />
                                        </ui:template>
                                    </ui:Column>

                                    <!-- Payment Due  -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>PAYMENT_DUE}" />
                                        <ui:template>
                                            <DatePicker
                                                value="{path: 'costModel>CstPaydt', formatter: '.formatter.formatDate'}"
                                                displayFormat="dd-MM-yyyy"
                                                valueFormat="yyyy-MM-dd"
                                                enabled="{costModel>isRowEditable}"
                                            />
                                        </ui:template>
                                    </ui:Column>

                                    <!-- Company -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>COMPANY}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey="{costModel>CstComp}"
                                                enabled="{costModel>isRowEditable}"
                                                items="{ path : 's4HanaModel>/ZTA_CST_VENDSet' }"
                                            >
                                                <core:Item
                                                    key="{s4HanaModel>CstComp}"
                                                    text="{s4HanaModel>CstCompD}"
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>

                                    <!-- Payment -->
                                    <ui:Column width="12rem">
                                        <Label text="{i18n>PRICING_FORMULA}" />
                                        <ui:template>
                                            <ComboBox
                                                selectedKey=""
                                                enabled="{costModel>isRowEditable}"
                                                items=""
                                            >
                                                <core:Item
                                                    key=""
                                                    text=""
                                                />
                                            </ComboBox>
                                        </ui:template>
                                    </ui:Column>
                                </ui:columns>
                            </ui:Table>
                </Panel>
                <HBox width="100%"
      renderType="Bare"
      alignItems="Start"
      class="sapUiLargeMarginBottom"
      style="gap: 2rem;">  <!-- space between panels -->

    <!-- ================= LEFT PANEL CONTAINER ================= -->
    <VBox width="49%" style="flex-grow:1;" class="sapUiSmallMarginEnd sapUiMediumPadding">

        <Panel
            headerText="Purchase Order Input"
            expandable="true"
            expanded="true"
            width="100%"
            class="sapUiMediumMarginTop">

            <VBox width="100%">

                <!-- Load Port Section -->
                <VBox id="loadPortSection" visible="{appModel>/ShowLoadPortPanel}">
                    <Title text="Load Port" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />

                    <Label text="Transfer Number" />
                    <Input id="loadPorttrsnum"
                        value="{path:'appModel>/TradeDetails/0/TnfrNum', formatter: '.formatter.formatNumberWithComma'}"
                        liveChange=".onNumberLiveChange"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Batch Number" />
                    <Input 
                                value="{appModel>BtchNum}" enabled="false"
                            />

                    <Label text="Load Port Quantity in BBL" />
                    <Input id="loadPortQtyBbl"
                        value="{path:'appModel>/TradeDetails/0/Lp1Qtybbl', formatter: '.formatter.formatNumberWithComma'}"
                        liveChange=".onNumberLiveChange"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Load Port Quantity in MT" />
                    <Input id="loadPortQtyMt"
                        value="{path:'appModel>/TradeDetails/0/Lp1Qtymt', formatter: '.formatter.formatNumberWithComma'}"
                        liveChange=".onNumberLiveChange"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Load Port API" />
                    <Input id="loadPortApi"
                        value="{path:'appModel>/TradeDetails/0/Lp1Api', formatter: '.formatter.formatNumberWithComma'}"
                        liveChange=".onNumberLiveChange"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Load Port Title Transfer Date" />
                    <DatePicker id="loadPortTrndt"
                        value="{appModel>/TradeDetails/0/Lp1Trndt}"
                        displayFormat="dd-MM-yyyy"
                        valueFormat="yyyy-MM-dd"
                        enabled="false"
                        class="sapUiTinyMarginBottom" />
                </VBox>

                <!-- Discharge Port Section -->
                <VBox width="100%" visible="{appModel>/ShowDischargePortPanel}">
                    <Title text="Discharge Port" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />

                    <Label text="Transfer Number" />
                    <Input id="loadPorttsnum"
                        value="{path:'appModel>/TradeDetails/0/TnfrNum', formatter: '.formatter.formatNumberWithComma'}"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Batch Number" />
                    <Input id="loadPortbtchhnum"
                        value="{path:'appModel>/TradeDetails/0/BtchNum', formatter: '.formatter.formatNumberWithComma'}"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Discharge Port Quantity in BBL" />
                    <Input id="discPortQtyBbl"
                        value="{path:'appModel>/TradeDetails/0/Dp1Qtybbl', formatter: '.formatter.formatNumberWithComma'}"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Discharge Port Quantity in MT" />
                    <Input id="discPortQtyMt"
                        value="{path:'appModel>/TradeDetails/0/Dp1Qtymt', formatter: '.formatter.formatNumberWithComma'}"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Discharge Port API" />
                    <Input id="discPortApi"
                        value="{path:'appModel>/TradeDetails/0/Dp1Api', formatter: '.formatter.formatNumberWithComma'}"
                        enabled="false" class="sapUiTinyMarginBottom" />

                    <Label text="Discharge Port Title Transfer Date" />
                    <DatePicker id="discPortTrndt"
                        value="{appModel>/TradeDetails/0/Dp1Trndt}"
                        displayFormat="dd-MM-yyyy"
                        valueFormat="yyyy-MM-dd"
                        enabled="false"
                        class="sapUiTinyMarginBottom" />
                </VBox>

                <HBox class="sapUiSmallMarginTop" justifyContent="Start">
                    <Button
                        text="Save"
                        icon="sap-icon://save"
                        type="Emphasized"
                        press=".onExecutePOCreation"
                        class="sapUiTinyMarginEnd" />

                    <Button
                        text="Submit"
                        icon="sap-icon://accept"
                        type="Emphasized"
                        press=".onSubmitPOCreation"
                        class="sapUiTinyMarginEnd" />
                </HBox>

            </VBox>

        </Panel>

    </VBox>

    <!-- ================= RIGHT PANEL CONTAINER ================= -->
    <VBox width="49%" style="flex-grow:1;" class="sapUiSmallMarginBegin sapUiMediumPadding">

        <Panel
            headerText="GRN STO Input"
            expandable="true"
            expanded="true"
            width="100%"
            class="sapUiMediumMarginTop">

            <VBox width="100%">

