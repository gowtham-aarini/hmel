                                        text="{s4HanaModel>TrdVehD}"
                                    />
                                </ComboBox> -->
                     
                        </ui:template>
                    </ui:Column>
                    
                   <ui:Column width="8rem">
                        <Label text="Load Port" />
                        <ui:template>
                        <Input 
