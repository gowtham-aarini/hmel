                <Label text="Material Temperature" />
                <Input id="grnTmp" value="{appModel>/TradeDetails/0/TrdMattemp}"
                    enabled="false" class="sapUiTinyMarginBottom" />

                <Label text="Test Temperature" />
                <Input id="TstTmp" value="{appModel>/TradeDetails/0/TrdTsttemp}"
                    enabled="false" class="sapUiTinyMarginBottom" />

                <Label text="API" />
                <Input id="grnApi" value="{path:'appModel>/TradeDetails/0/GrDp1Api', formatter: '.formatter.formatNumberWithComma'}"
                    enabled="false" class="sapUiTinyMarginBottom" />

                <Label text="Title Transfer Date" />
                <DatePicker id="grnTrndt"
                    value="{appModel>/TradeDetails/0/GrDp1Trndt}"
                    displayFormat="dd-MM-yyyy"
                    valueFormat="yyyy-MM-dd"
                    enabled="false"
                    class="sapUiTinyMarginBottom" />
            </VBox>

            <HBox class="sapUiSmallMarginTop" justifyContent="Start">
                <Button
                    text="Save"
                    icon="sap-icon://save"
                    type="Emphasized"
                    press=".onExecuteGRNCreation"
                    class="sapUiTinyMarginEnd" />

                <Button
                    text="Submit"
                    icon="sap-icon://accept"
                    type="Emphasized"
                    press=".onSubmitGRNCreation"
                    class="sapUiTinyMarginEnd" />
            </HBox>

        </Panel>

    </VBox>

</HBox>         
        </content>
    </Page>
</mvc:View>
