                <Label text="Quantity in BBL" />
                <Input id="grnQtyBbl" value="{path:'appModel>/TradeDetails/0/GrDp1Qtybbl', formatter: '.formatter.formatNumberWithComma'}"
                    enabled="false" class="sapUiTinyMarginBottom" />

                <Label text="Quantity in MT" />
                <Input id="grnQtyMt" value="{path:'appModel>/TradeDetails/0/GrDp1Qtymt', formatter: '.formatter.formatNumberWithComma'}"
                    enabled="false" class="sapUiTinyMarginBottom" />

